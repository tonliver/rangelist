{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "remove",
    "rootDir": "../",
    "outDir": "../dist",
    "plugins": [
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": [
    "../src/**/*.ts"
  ]
}